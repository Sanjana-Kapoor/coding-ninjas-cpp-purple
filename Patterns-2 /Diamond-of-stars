/ * Print the following pattern for the given number of rows.
Note: N is always odd.


Pattern for N = 5
  *
 ***
*****
 ***
  *
*/

#include<iostream>
using namespace std;


int main() {
    int n;
    cin>>n;
    int i=1;
    int m=(n+1)/2;
    
    while(i<=m){
        
        int k=1;
        while(k<=m-i){
            cout<<" ";
            k++;
        }
        
        int j=1;
        while(j<=2*i-1){
            cout<<"*";
            j++;
        }
        
        cout<<endl;
        i++;
        
    }
    

    int p = m-1;
    int f=p;
    
        
    while(f>=1){
        
        int k=1;
        while(k<=p-f+1){
            cout<<" ";
            k++;
        }
        
        int j=1;
        while(j<=2*f-1){
            cout<<"*";
            
            j++;
        }
        
        cout<<endl;
        f--;
        
    }
    



    
    /*  Read input as specified in the question.
     * Print output as specified in the question.
     */
    
}
